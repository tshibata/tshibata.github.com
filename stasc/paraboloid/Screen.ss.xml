<svg width="320" height="460" viewBox="0 0 320 460" viewPort="0 0 320 460" style="margin: 0; padding: 0;"
 xmlns="http://www.w3.org/2000/svg"
 xmlns:xlink="http://www.w3.org/1999/xlink"
 xmlns:ss="http://tshibata.github.io/2013/stasc">
	<ss:property name="Position" target="style.position"/>
	<ss:property name="Left" target="style.left"/>
	<ss:property name="Top" target="style.top"/>
	<ss:attribute name="Width" target="width"/>
	<ss:attribute name="Height" target="height"/>

	<defs>
		<marker id="arrow" markerUnits="strokeWidth" markerWidth="4" markerHeight="4" viewBox="0 0 4 4" refX="3" refY="2" orient="auto">
			<polygon points="4,2 0,4 0,0" fill="white"/>
		</marker>
	</defs>

	<rect x="0" y="0" fill="black" width="320" height="460"/>

	<circle visibility="hidden" fill="white" cx="160" cy="240" r="10">
		<ss:attribute name="PuckVisibility" target="visibility"/>
		<ss:attribute name="PuckX" target="cx"/>
		<ss:attribute name="PuckY" target="cy"/>
	</circle>

	<circle fill="lightgrey" cx="160" cy="430" r="50">
		<ss:attribute name="YouX" target="cx"/>
	</circle>

	<rect x="0" y="430" fill="black" width="320" height="30"/>

	<ss:plug name="Stage">
		<g></g>
	</ss:plug>

	<ss:plug name="Title">
		<g>
			<rect x="0" y="0" fill="white" width="320" height="460"/>
			<g>
				<animate attributeType="XML" attributeName="opacity" begin="0s" dur="3s" from="0" to="1"/>
				<text x="160" y="200" text-anchor="middle" font-family="Helvetica" font-size="48" style="fill:none; stroke:black; stroke-width:1px;">
					<animate attributeType="CSS" attributeName="stroke-width" begin="0s" dur="3s" from="16px" to="0px"/>
					Paraboloid
				</text>
				<text x="160" y="240" text-anchor="middle" font-family="Helvetica" font-size="24" style="fill:none; stroke:black; stroke-width:1px;">
					<animate attributeType="CSS" attributeName="stroke-width" begin="0s" dur="3.5s" from="8px" to="0px"/>
					made by using
				</text>
				<text x="160" y="300" text-anchor="middle" font-family="Helvetica" font-size="18" style="fill:none; stroke:black; stroke-width:1px;">
					<animate attributeType="CSS" attributeName="stroke-width" begin="0s" dur="4.5s" from="6px" to="0px"/>
					(https://github.com/tshibata/stasc)
				</text>
				<text x="160" y="280" text-anchor="middle" font-family="Helvetica" font-size="48" style="fill:none; stroke:crimson; stroke-width:1px;">
					<animate attributeType="CSS" attributeName="stroke-width" begin="0s" dur="4s" from="16px" to="0px"/>
					stasc
				</text>
			</g>
		</g>
	</ss:plug>

	<text x="320" y="20" text-anchor="end" font-size="18" font-family="Monospace" fill="white">
		<ss:property name="Score" target="textContent"/>
	</text>
	<text x="0" y="20" text-anchor="start" font-size="18" font-family="Monospace" fill="white">
		<ss:property name="Time" target="textContent"/>
	</text>
</svg>

